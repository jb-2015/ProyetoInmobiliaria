<script>
    let inputEmail = document.querySelector("#Email");
    inputEmail.addEventListener("focus", () => {
        document.querySelector("#mensajeError").style.display = "none";
    });

    let botonIngresar = document.querySelector("#botonIngresar");
    botonIngresar.addEventListener("click", () => {
        let Email = document.querySelector("#Email");
        let Password = document.querySelector("#Password");
        axios.post("http://localhost:5203/Login/Autenticacion", {
            Email: Email.value, Password: Password.value
        })
        .then(res => {
            if (res.data.ok) {
                window.location.href = "/Home/Index";
            } else {
                let mensajeError = document.querySelector("#mensajeError");
                mensajeError.style.display = "inline";
                mensajeError.innerHTML = res.data.mensaje;
                mensajeError.style.color = "red";
            }
        })
        .catch(err => console.log(err));
    });
</script>
