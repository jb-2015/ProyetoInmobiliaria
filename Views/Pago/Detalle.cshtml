@model Pago
<h2>Pagos realizados por el contrato</h2>
<table class="table table-even-columns table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Contrato</th>
            <th>Fecha de pago</th>
            <th>Importe</th>
            <th>Numero de pago</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <th>@Model.IdContrato</th>
                <th>@Model.FechaPago</th>
                <th>$@Model.Importe</th>
                <th>@Model.NumeroPago</th>
                <th>@Model.Detalle</th>
            </tr>
    </tbody>
</table>