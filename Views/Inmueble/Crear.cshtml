@model InmuebleViewModel

@{
    ViewData["title"]="Crear Inmueble";
    ViewData["BodyClass"] = "crear-inmueble-bg";
}

<h2 class="h2-tipos-background">Nuevo Inmueble</h2>

<div class="container-formulario crear-inmueble">
    <div class="row justify-content-center">
        <form asp-action="Guardar" class="formulario-formulario"method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Inmueble.IdInmueble" value="0">
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.UrlImagen "class="form-label">URL Imagen</label>
                    <input type="text" asp-for="Inmueble.UrlImagen" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.CantidadAmbientes" class="form-label">Cantidad Ambientes</label>
                    <input type="text" asp-for="Inmueble.CantidadAmbientes" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.Metros2" class="form-label">M2</label>
                    <input type="text" asp-for="Inmueble.Metros2" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.Precio" class="form-label">Precio</label>
                    <input type="text" asp-for="Inmueble.Precio" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label class="CheckCochera">
                        <input class="form-check-input" asp-for="Inmueble.Cochera" type="checkbox"> Cochera
                    </label>
                </div>
                <div class="form-group mb-3">
                    <label class="CheckPiscina">
                        <input class="form-check-input" asp-for="Inmueble.Piscina" type="checkbox"> Piscina
                    </label>
                </div>
                <div class="form-group mb-3">
                    <label class="CheckMascotas">
                        <input class="form-check-input" asp-for="Inmueble.Mascotas" type="checkbox"> Mascotas
                    </label>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.IdTipo" class="form-label">Tipo</label>
                    <select asp-for="Inmueble.IdTipo" asp-items="@(new SelectList(Model.Tipos, "IdTipo", "Observacion"))" class="form-control">
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.IdDireccion" class="form-label">Direccion</label>
                    <select asp-for="Inmueble.IdDireccion" asp-items="@(new SelectList(Model.Direcciones, "IdDireccion", "DireccionCompleta"))" class="form-control">
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Inmueble.IdPropietario" class="form-label">Propietarios</label>
                    <select asp-for="Inmueble.IdPropietario" asp-items="@(new SelectList(Model.Propietarios, "IdPropietario", "NombreYApellido"))" class="form-control">
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label class="CheckDisponible">
                        <input class="form-check-input" asp-for="Inmueble.Disponible" type="checkbox"> Disponible
                    </label>
                </div>
                <div class="form-group mb-3">
                    <textarea asp-for="Inmueble.Descripcion" class="form-control" placeholder="Ingrese una descripcion...">@Model.Inmueble.Descripcion</textarea>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
    </div>  
</div>


