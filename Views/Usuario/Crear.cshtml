@model Usuario

@{
    ViewData["title"]="Crear Usuario";
    }


<div class="containerV">
    <form asp-action="Guardar" method="Post">
            <div class="form-group">
                <label asp-for="Email">Nombre</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Ingrese su Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese una contraseña">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol">Rol</label>
                <select asp-for="Rol" class="form-control">
                    <option value="Administrador">Administrador</option>
                    <option value="Empleado">Empleado</option>
                </select>
            </div>
    </form>
</div>